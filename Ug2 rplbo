package com.ug3.soal1;

import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Scanner;

public class UGSoal1 {
    public static void main( String[] args ) {
        Scanner scanner = new Scanner(System.in);
        
        // Memasukkan input nama karyawan
        System.out.print("Masukkan nama karyawan: ");
        String name = scanner.nextLine();
        
        // Mendapatkan tanggal absensi
        SimpleDateFormat dateFormat = new SimpleDateFormat("yyyy-MM-dd");
        String date = dateFormat.format(new Date());
        
        // Mendapatkan waktu absensi
        SimpleDateFormat timeFormat = new SimpleDateFormat("HH:mm:ss");
        String time = timeFormat.format(new Date());
        
        // Memanggil fungsi absen
        absen(name, date, time);
        
        // Menutup scanner
        scanner.close();
    }

    public static void absen(String name, String date, String time) {
        // Menampilkan hasil output
        System.out.println("Karyawan " + name + " melakukan absensi pada tanggal " + date + " pukul " + time);
    }
}

ggggggg
public void absen(String name, String date, String time) {
    // Mendapatkan tanggal dan waktu saat ini
    Date now = new Date();
    SimpleDateFormat sdf = new SimpleDateFormat("dd-MMMM-yyyy HH:mm:ss");
    String currentDate = sdf.format(now);

    // Membandingkan tanggal dan waktu yang diinput dengan tanggal dan waktu saat ini
    if (date.equals(currentDate.substring(0, 10)) && time.equals(currentDate.substring(11, 19))) {
        // Menampilkan pesan absensi berhasil
        System.out.println("**Berhasil absensi**");
        System.out.println("Atas nama : " + name);
        System.out.println("Pada tanggal : " + date);
        System.out.println("Pukul : " + time);
    } else {
        // Menampilkan pesan absensi gagal
        System.out.println("**Absensi gagal**");
        System.out.println("Tanggal atau waktu yang diinput tidak sesuai dengan tanggal dan waktu saat ini.");
        System.out.println("Tanggal dan waktu saat ini: " + currentDate);
    }
}

